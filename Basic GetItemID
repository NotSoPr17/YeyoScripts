--Update 1.1 (10/2/2021): detects also block position with right click
--Update 1.2 (10/7/2021): Get Block id by breaking a block
--Update 1.3 (10/7/2021): Get Buff id & level by adding a buff to your self

function GetItemID(event)
    local itemid = event.itemid
    
    local result,iiname = Item:getItemName(itemid)
    Chat:sendSystemMsg("Hand Item ID: "..itemid,0)
end
ScriptSupportEvent:registerEvent([=[Player.SelectShortcut]=],GetItemID)

function CheckBlockID(e)
	local x = e.x
    	local y = e.y
    	local z = e.z
    	Chat:sendSystemMsg("x "..x.." / y "..y.." / z "..z,0)
end
ScriptSupportEvent:registerEvent([=[Player.ClickBlock]=],CheckBlockID)

BreakBlockID = function( parameters )
    local playerid = parameters.eventobjid
    local block = parameters.blockid
    Chat:sendSystemMsg("blockid: "..block,playerid)
end 
ScriptSupportEvent:registerEvent([=[Player.ClickBlock]=],BreakBlockID)

AddBuffBlockID = function( event )
	local playerid = event.eventobjid
	local buff = event.buffid
	local lvl = event.bufflvl
	Chat:sendSystemMsg("Buff #Gid: "..buff.."#n and #Rlvl: "..lvl,playerid)
end
ScriptSupportEvent:registerEvent([=[Player.AddBuff]=], AddBuffBlockID)
